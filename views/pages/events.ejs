<h1>Upcoming Events</h1>
<p>Check out what's happening soon!</p>
<!--additional code-->

<%- include('partials/header', { title: 'Events' }) %>
<%- include('partials/navbar') %>

<div class="container">
  <h1>Events</h1>

  <% if (events && events.length > 0) { %>
    <% events.forEach(event => { %>
      <div class="card">
        <h3><%= event.title %></h3>
        <p><%= event.date %> | <%= event.location %></p>
        <% if (event.image) { %>
          <img src="/images/<%= event.image %>" alt="<%= event.title %>" style="max-width:100%; border-radius:8px;">
        <% } %>
      </div>
    <% }) %>
  <% } else { %>
    <p>No events available right now.</p>
  <% } %>
</div>

<%- include('partials/footer') %>
