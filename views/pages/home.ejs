<h1>Welcome to the Community Portal</h1>

<%- include('partials/header', { title: 'Home' }) %>
<%- include('partials/navbar') %>

<div class="container">
  <h1>Welcome to Our Community</h1>
  <p>We bring people together through engaging events and stories.</p>
 <section id="Games">
  <script>
    const topGames = [
      { name: "The Slormancer", imageUrl: "https://cdn.cloudflare.steamstatic.com/steam/apps/1000000/header.jpg", maxPlayers: "3548" },
      { name: "Black Mesa", imageUrl: "https://cdn.cloudflare.steamstatic.com/steam/apps/362890/header.jpg", maxPlayers: "4369" },
      { name: "Digimon World: Next Order", imageUrl: "https://cdn.cloudflare.steamstatic.com/steam/apps/1000000/header.jpg", maxPlayers: "718" },
      { name: "God Of Weapons", imageUrl: "https://cdn.cloudflare.steamstatic.com/steam/apps/1000000/header.jpg", maxPlayers: "2020" },
      { name: "Siralim Ultimate", imageUrl: "https://cdn.cloudflare.steamstatic.com/steam/apps/1000000/header.jpg", maxPlayers: "429" }
    ];
  
    let tableTrending = 
      `
      <table>
        <tr>
          <th>Trending Games</th>
          <th>Image</th>
          <th>Dayle Peak of players</th>
        </tr>
        `;
  
    topGames.forEach(game => {
      tableTrending += `
        <tr>
          <td>
            ${game.name}
          </td>
          <td>
            <img src="${game.imageUrl}" alt="${game.name}" width="100">
          </td>
          <td>
            ${game.maxPlayers}
          </td>
        </tr>
      `;
    });
  
    tableTrending += `
      </table>
    `;
  
    document.write(tableTrending);
  </script>

  <table id ="top-games">
    <th>Top Games by Player Base</th>
    <tr>
      <ol>
        <li>Counter-Strike 2</li>
        <li>Dota 2</li>
        <li>PUBG</li>
        <li>Bongo Cat</li>
        <li>Apex Legends</li>
        <li>Banana</li>
        <li>Delta Force</li>
        <li>Rust</li>
        <li>NARAKA: BLADEPOINT</li>
      </ol>
    </tr>
  </table>
</section>
  <section>
    <h2>Upcoming Events</h2>
    <% if (events && events.length > 0) { %>
      <% events.forEach(event => { %>
        <div class="card">
          <h3><%= event.title %></h3>
          <p><%= event.date %> | <%= event.location %></p>
        </div>
      <% }) %>
    <% } else { %>
      <p>No upcoming events at the moment.</p>
    <% } %>
  </section>
</div>

<%- include('partials/footer') %>
