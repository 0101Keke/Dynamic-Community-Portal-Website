<h1>Welcome to the Community Portal</h1>

<%- include('partials/header', { title: 'Home' }) %>
<%- include('partials/navbar') %>

<div class="container">
  <h1>Welcome to Our Community</h1>
  <p>We bring people together through engaging events and stories.</p>
 
  <table>
    <tr>
      <th>Current Top 5 Games</th>
    </tr>
    <tr>
      <td>
        The Slormancer
      </td>
      <td>
        <img src="https://cdn.cloudflare.steamstatic.com/steam/apps/1000000/header.jpg" alt="The Slormancer">
      </td>
    </tr>
    <tr>
      <td>
        Black Mesa
      </td>
      <td>
        <img src="https://cdn.cloudflare.steamstatic.com/steam/apps/362890/header.jpg" alt="Black Mesa">
      </td>
    </tr>
    <tr>
      <td>
        Digimon World: Next Order
      </td>
      <td>
        <img src="https://cdn.cloudflare.steamstatic.com/steam/apps/1000000/header.jpg" alt="Digimon World: Next Order">
      </td>
    </tr>
    <tr>
      <td>
        God Of Weapons
      </td>
      <td>
        <img src="https://cdn.cloudflare.steamstatic.com/steam/apps/1000000/header.jpg" alt="God Of Weapons">
      </td>
    </tr>
    <tr>
      <td>
        Siralim Ultimate
      </td>
      <td>
        <img src="https://cdn.cloudflare.steamstatic.com/steam/apps/1000000/header.jpg" alt="Siralim Ultimate">
      </td>
    </tr>
  </table>
  <section>
    <h2>Upcoming Events</h2>
    <% if (events && events.length > 0) { %>
      <% events.forEach(event => { %>
        <div class="card">
          <h3><%= event.title %></h3>
          <p><%= event.date %> | <%= event.location %></p>
        </div>
      <% }) %>
    <% } else { %>
      <p>No upcoming events at the moment.</p>
    <% } %>
  </section>
</div>

<%- include('partials/footer') %>
