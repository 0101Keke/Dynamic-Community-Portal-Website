<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login or Create Account</title>
    
</head>
<%- include('../partials/header', { title: 'Home' }) %>
<body>
    <script src="/models/login.js"></script>
    <div class="container">
        <h2>Login or Create Account</h2>

        <div id="login-form">
            <h3>Login</h3>
            <form id="login-form-element">
                <div class="form-group">
                    <label for="login-username">Username:</label>
                    <input type="text" id="login-username" name="username" required>
                </div>
                <div class="form-group">
                    <label for="login-password">Password:</label>
                    <input type="password" id="login-password" name="password" required>
                </div>
                <button type="submit">Login</button>
            </form>
            <div class="switch-form">
                Don't have an account? <a href="#" onclick="showCreateForm()">Create Account</a>
            </div>
            <p id="login-error" class="error-message"></p>

        </div>

        <div id="create-account-form" style="display: none;">
            <h3>Create Account</h3>
            <form id="create-account-form-element">
                <div class="form-group">
                    <label for="create-username">Username:</label>
                    <input type="text" id="create-username" name="username" required>
                </div>
                <div class="form-group">
                    <label for="create-password">Password:</label>
                    <input type="password" id="create-password" name="password" required>
                </div>
                <button type="submit">Create Account</button>
            </form>
            <div class="switch-form">
                Already have an account? <a href="#" onclick="showLoginForm()">Login</a>
            </div>
             <p id="registration-error" class="error-message"></p>
        </div>
    </div>